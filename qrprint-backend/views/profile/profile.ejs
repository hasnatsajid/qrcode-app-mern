<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/commonhead") %>
  </head>

  <body class="bg-light">
    <div class="d-flex" id="wrapper">
      <%- include ("../partials/sidebar") %>
      <div class="page-content-wrapper w-100">
        <%- include ("../partials/header") %>
        <div class="container-fluid pt-3">
          <h1 class="mb-4 text-center">Update Profile</h1>
          <div class="row">
            <div class="col-lg-7 mx-auto"><%- include ("../partials/messages") %></div>
          </div>
          <div class="row">
            <div class="col-lg-7 mx-auto">
              <div class="card p-3">
                <form action="/admin/profile/edit" method="POST">
                  <div class="row">
                    <div class="form-group col-lg-6">
                      <label for="firstName" class="mb-0">First Name</label>
                      <input
                        type="text"
                        class="form-control"
                        name="firstName"
                        id="firstName"
                        required
                        value="<%= user.firstName %>"
                      />
                    </div>
                    <div class="form-group col-lg-6">
                      <label for="lastName" class="mb-0">Last Name</label>
                      <input
                        type="text"
                        class="form-control"
                        name="lastName"
                        id="lastName"
                        required
                        value="<%= user.lastName %>"
                      />
                    </div>
                  </div>
                  <div class="row mt-3">
                    <div class="col-lg-3 offset-lg-3">
                      <button class="btn btn-theme btn-block">Update</button>
                    </div>
                    <div class="col-lg-3">
                      <a class="btn btn-theme btn-theme-secondary btn-block" onclick="window.history.back()">Cancel</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ("../partials/commonscripts") %>
  </body>
</html>
