<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/commonhead") %>
  </head>

  <body class="bg-light">
    <div class="d-flex" id="wrapper">
      <%- include ("../partials/sidebar") %>
      <div class="page-content-wrapper w-100">
        <%- include ("../partials/header") %>
        <div class="container-fluid pt-3">
          <h1 class="mb-4 text-center">Change Password</h1>
          <div class="row">
            <div class="col-lg-7 mx-auto"><%- include ("../partials/messages") %></div>
          </div>
          <div class="row">
            <div class="col-lg-7 mx-auto">
              <div class="card p-3">
                <form action="/admin/profile/change-password?_method=PUT" method="POST">
                  <div class="row">
                    <div class="form-group col-lg-6">
                      <label for="password1" class="mb-0">New Password</label>
                      <input type="password" class="form-control" name="password1" id="password1" required />
                    </div>
                    <div class="form-group col-lg-6">
                      <label for="password2" class="mb-0">Confirm Password</label>
                      <input type="password" class="form-control" name="password2" id="password2" required />
                    </div>
                  </div>
                  <div class="row mt-3">
                    <div class="col-lg-3 offset-lg-3">
                      <button class="btn btn-theme btn-block">Update</button>
                    </div>
                    <div class="col-lg-3">
                      <a class="btn btn-theme btn-theme-secondary btn-block" onclick="window.history.back()">Cancel</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ("../partials/commonscripts") %>
  </body>
</html>
