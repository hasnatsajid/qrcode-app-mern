<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/commonhead") %>
  </head>

  <body class="bg-light">
    <div class="d-flex" id="wrapper">
      <%- include ("../partials/sidebar") %>
      <div class="page-content-wrapper w-100">
        <%- include ("../partials/header") %>
        <div class="container-fluid pt-3">
          <h1 class="mb-4 text-center">Feedbacks</h1>
          <%- include ("../partials/messages") %>
          <div class="row">
            <div class="col">
              <div class="card p-3">
                <table class="table table-striped table-hover" style="font-size: 0.8em">
                  <colgroup></colgroup>
                  <thead>
                    <th>Created</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Feelings</th>
                    <th>Recommend Score</th>
                    <th>Feedback Text</th>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < feedbacks.length; i++) { %>
                    <tr>
                      <td class="date-column"><%= feedbacks[i].createdAt %></td>
                      <td>
                        <%= feedbacks[i].user ? feedbacks[i].user.firstname : '' %> <%= feedbacks[i].user ?
                        feedbacks[i].user.lastname : '' %>
                      </td>
                      <td><%= feedbacks[i].user ? feedbacks[i].user.email : '' %></td>
                      <td><%= feedbacks[i].feelings %></td>
                      <td><%= feedbacks[i].recommendScore %></td>
                      <td><%= feedbacks[i].body %></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ("../partials/commonscripts") %>

    <script>
      $('.date-column').each(function (index, element) {
        $(element).text(moment($(element).text()).format('MM/DD/YYYY H:m A'));
      });
    </script>
  </body>
</html>
